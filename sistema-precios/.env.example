# Configuración del entorno
# Copiar a .env y configurar valores reales

# Base de datos
DATABASE_URL=postgresql://usuario:password@localhost:5432/precios_facturacion
REDIS_URL=redis://localhost:6379

# Servidor
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000/api

# Autenticación
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Stripe (Pasarela de pago)
STRIPE_SECRET_KEY=sk_test_tu_clave_secreta_de_stripe
STRIPE_PUBLISHABLE_KEY=pk_test_tu_clave_publica_de_stripe
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion
SMTP_FROM=noreply@empresa.com
SMTP_FROM_NAME=Sistema de Facturación

# Facturación electrónica
FACTURACION_API_URL=https://api.facturacion.com
FACTURACION_API_KEY=tu_api_key_de_facturacion
FACTURACION_CERT_PATH=./certificates/facturacion.pem

# Almacenamiento
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_BUCKET_NAME=precios-facturacion-docs
AWS_REGION=eu-west-1

# Notificaciones
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/tu/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/tu/webhook/url

# Monitoreo
SENTRY_DSN=https://tu_sentry_dsn@sentry.io/project_id
LOG_LEVEL=info

# Límites
MAX_USUARIOS_POR_SUSCRIPCION=10000
MAX_FACTURAS_POR_DIA=1000
TIMEOUT_PAGO=300000

# Características experimentales
ENABLE_AI_PRICING=false
ENABLE_PREDICTIVE_CHURN=false
ENABLE_AUTO_RENEWAL=true
ENABLE_CONTRACT_GENERATION=true

# Internacionalización
DEFAULT_LOCALE=es-ES
SUPPORTED_LOCALES=es-ES,en-US,fr-FR

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Backup
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=precios-backups

# API externa para validaciones
NIF_VALIDATION_API_URL=https://api.validacion.com/nif
IBAN_VALIDATION_API_URL=https://api.validacion.com/iban

# Configuración de impuestos
DEFAULT_VAT_RATE=0.21
EU_VAT_RATES_JSON_PATH=./config/eu-vat-rates.json

# Moneda
DEFAULT_CURRENCY=EUR
SUPPORTED_CURRENCIES=EUR,USD,GBP

# Documentos
DOCUMENT_RETENTION_YEARS=7
DOCUMENT_SIGNING_PROVIDER=docusign

# Webhook URLs
WEBHOOK_SUCCESS_URL=https://app.empresa.com/webhook/stripe/success
WEBHOOK_ERROR_URL=https://app.empresa.com/webhook/stripe/error
WEBHOOK_RENEWAL_URL=https://app.empresa.com/webhook/stripe/renewal

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXX-X
MIXPANEL_TOKEN=tu_mixpanel_token

# Configuración de desarrollo
DEBUG=precios:*